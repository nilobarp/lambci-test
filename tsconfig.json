{
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": false,
    "removeComments": false,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "tests",
    "scripts",
    "logs",
    "build",
    "coverage",
    "node_modules",
    "__mocks__"
  ]
}
